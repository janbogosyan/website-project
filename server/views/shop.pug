 extends layouts/main-layout.pug 

block styles          
    link(rel="stylesheet" href="/css/product.css")

block something 
    main
        if prods.length > 0
                    .grid 
                    
                        each product in prods

                            article.card.product-item 
                                header.card__header 
                                    h1.product__title #{product.title}
                            .card__image 
                                    img(src="https://cdn.ozone.bg/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/f/a/d03a76e63c512a8edce337949203ee6a/figura-funko-pop!-animation--fairy-tail-s3--zeref-31.jpg", alt="anime toy")
                            .card__content 
                                    h2.product__price $21.00
                                    p.product__description High quality anime figure
                            .card__actions 
                                    button.btn Add to Cart
        else 
            h1 No Product        


            